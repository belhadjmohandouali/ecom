{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block content %}
    <h2>Je passe ma commande</h2>
    <p>pr√©ferences avant de passer la commande</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
            {{ form_start(form, {action:path('app_order_recap')}) }}
            {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
        </div>
        <div class="col-md-6">
            <h4>Recapitulatif de ma commande</h4><hr>
            {% for product in cart %}
                <div class="row">
                    <div class="col-2"> <img src="/uploads/images/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px" width="75px"></div>
                    <div class="col-8">
                        {{ product.product.name }}
                        <small>{{ product.product.subtitle }}</small>
                    </div>
                    <div class="col-2">
                         {{ product.quantity }}
                    </div>

                </div>
                <hr>

            {% endfor %}
        </div>
    </div>
{% endblock %}
